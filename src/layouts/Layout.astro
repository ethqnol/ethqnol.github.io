---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ClientRouter />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body
        class="bg-neutral-950 text-white font-sans antialiased selection:bg-indigo-500 selection:text-white"
    >
        <div class="fixed inset-0 -z-10 h-full w-full bg-neutral-950">
            <div
                class="absolute inset-0 bg-[linear-gradient(to_right,transparent_23px,#80808012_23px,#80808012_24px,transparent_24px),linear-gradient(to_bottom,transparent_23px,#80808012_23px,#80808012_24px,transparent_24px)] bg-[size:48px_48px]"
            >
            </div>
            <div
                class="absolute inset-0 bg-[radial-gradient(circle_2px_at_23.5px_23.5px,#ffffff_100%,transparent_100%)] bg-[size:48px_48px] [mask-image:radial-gradient(circle_at_center,white_10%,transparent_55%)] opacity-60"
            >
            </div>
            <div
                class="absolute left-0 right-0 top-0 -z-10 m-auto h-[310px] w-[310px] rounded-full bg-indigo-500 opacity-20 blur-[100px]"
            >
            </div>
        </div>
        <slot />
    </body>
</html>
