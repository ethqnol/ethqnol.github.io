---
import Layout from "../layouts/Layout.astro";
import BentoGrid from "../components/BentoGrid.astro";
import BentoItem from "../components/BentoItem.astro";
---

<Layout title="Ethan Wu | Portfolio">
	<main class="min-h-screen py-20 px-4">
		<div class="max-w-6xl mx-auto mb-12 text-center">
			<h1
				class="text-4xl md:text-7xl font-bold bg-clip-text text-transparent bg-gradient-to-b from-neutral-200 to-neutral-600 mb-4"
			>
				Ethan Wu
			</h1>
			<p class="text-neutral-400 text-xl max-w-2xl mx-auto mb-8">
				R2-D2 Glazer
				<br />
				Interested in Operations Research, Compilers, & ML.
				<br />
				Northwestern 2030
			</p>

			<div class="flex justify-center gap-6 mb-12">
				<a
					href="https://github.com/ethqnol"
					target="_blank"
					rel="noopener noreferrer"
					class="text-neutral-400 hover:text-white transition-colors"
				>
					<span class="sr-only">GitHub</span>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="w-6 h-6"
						><path
							d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
						></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
					>
				</a>
				<a
					href="https://www.linkedin.com/in/ethan-wu-3b908a2a4/"
					target="_blank"
					rel="noopener noreferrer"
					class="text-neutral-400 hover:text-white transition-colors"
				>
					<span class="sr-only">LinkedIn</span>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="w-6 h-6"
						><path
							d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
						></path><rect width="4" height="12" x="2" y="9"
						></rect><circle cx="4" cy="4" r="2"></circle></svg
					>
				</a>
				<a
					href="https://instagram.com/ethqnol"
					target="_blank"
					rel="noopener noreferrer"
					class="text-neutral-400 hover:text-white transition-colors"
				>
					<span class="sr-only">Instagram</span>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="w-6 h-6"
						><rect width="20" height="20" x="2" y="2" rx="5" ry="5"
						></rect><path
							d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
						></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"
						></line></svg
					>
				</a>
			</div>
		</div>

		<BentoGrid
			className="max-w-7xl mx-auto md:grid-cols-[minmax(0,1fr)_minmax(0,1fr)_minmax(0,1fr)_minmax(0,1.05fr)]"
		>
			<a href="/education" class="contents">
				<BentoItem
					className="md:col-span-1 md:row-span-2 cursor-pointer hover:scale-[1.01] transition-transform"
				>
					<div
						slot="header"
						class="flex flex-1 w-full h-full min-h-[6rem] rounded-xl bg-neutral-900/50 border border-neutral-800 p-6 flex flex-col justify-between"
					>
						<div class="flex flex-col gap-4">
							<div class="flex items-center gap-3">
								<div class="p-2 bg-neutral-800/50 rounded-lg">
									<svg
										xmlns="http://www.w3.org/2000/svg"
										width="24"
										height="24"
										viewBox="0 0 24 24"
										fill="none"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
										class="w-5 h-5 text-neutral-200"
										><path d="M22 10v6M2 10l10-5 10 5-10 5z"
										></path><path
											d="M6 12v5c3 3 9 3 12 0v-5"
										></path></svg
									>
								</div>
								<span
									class="text-2xl font-bold text-neutral-200"
									>Education</span
								>
							</div>
							<p class="text-sm text-neutral-400 leading-relaxed">
								Incoming Freshman at Northwestern University (OR
								& CS).
								<br /><br />
								<span class="text-neutral-500"
									>Python, Rust, PyTorch, Jax, LLVM.</span
								>
							</p>
						</div>
					</div>
				</BentoItem>
			</a>

			<a href="/experience" class="contents">
				<BentoItem
					className="md:col-span-1 md:row-span-2 cursor-pointer hover:scale-[1.01] transition-transform"
				>
					<div
						slot="header"
						class="flex flex-1 w-full h-full min-h-[6rem] rounded-xl bg-gradient-to-br from-blue-900/50 to-slate-900/50 border border-blue-800/50 p-6 flex flex-col"
					>
						<div class="mb-4 flex items-center gap-3">
							<div
								class="p-2 bg-blue-900/30 rounded-lg border border-blue-700/30"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									width="24"
									height="24"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
									class="w-5 h-5 text-blue-200"
									><rect
										width="20"
										height="14"
										x="2"
										y="7"
										rx="2"
										ry="2"></rect><path
										d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"
									></path></svg
								>
							</div>
							<div>
								<h2 class="text-2xl font-bold text-white">
									Experience
								</h2>
							</div>
						</div>
						<div class="space-y-3 overflow-y-auto">
							<div class="space-y-0.5">
								<h3 class="font-bold text-blue-200 text-base">
									MIT Jameel Clinic
								</h3>
								<p class="text-xs text-neutral-300">
									ML Research Intern.
								</p>
							</div>
							<div class="space-y-0.5">
								<h3 class="font-bold text-red-200 text-base">
									Robotics Captain
								</h3>
								<p class="text-xs text-neutral-300">
									State Qualifiers.
								</p>
							</div>
							<div class="space-y-0.5">
								<h3
									class="font-bold text-emerald-200 text-base"
								>
									Community
								</h3>
								<p class="text-xs text-neutral-300">
									gbSTEM, Programmatics.
								</p>
							</div>
						</div>
					</div>
				</BentoItem>
			</a>

			<a href="/projects" class="contents">
				<BentoItem
					className="md:col-span-1 md:row-span-2 cursor-pointer hover:scale-[1.01] transition-transform"
				>
					<div
						slot="header"
						class="flex flex-1 w-full h-full min-h-[6rem] rounded-xl bg-neutral-900/50 border border-neutral-800 p-6 flex flex-col"
					>
						<div class="mb-4 flex items-center gap-3">
							<div class="p-2 bg-neutral-800/50 rounded-lg">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									width="24"
									height="24"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
									class="w-5 h-5 text-neutral-200"
									><polyline points="16 18 22 12 16 6"
									></polyline><polyline points="8 6 2 12 8 18"
									></polyline></svg
								>
							</div>
							<div>
								<h2 class="text-2xl font-bold text-white">
									Projects
								</h2>
								<p class="text-xs text-neutral-400">
									Code & Build
								</p>
							</div>
						</div>
						<div class="space-y-3 overflow-y-auto">
							<div class="space-y-0.5">
								<h3 class="font-bold text-white text-base">
									School Platform
								</h3>
								<p class="text-xs text-neutral-400">
									Astro, Firebase.
								</p>
							</div>
							<div class="space-y-0.5">
								<h3 class="font-bold text-white text-base">
									Salmon Lang
								</h3>
								<p class="text-xs text-neutral-400">
									LLVM Compiler.
								</p>
							</div>
							<div class="space-y-0.5">
								<h3 class="font-bold text-white text-base">
									JAX-KMeans
								</h3>
								<p class="text-xs text-neutral-400">
									JIT Optimization.
								</p>
							</div>
							<div class="space-y-0.5">
								<h3 class="font-bold text-white text-base">
									Match Predictor
								</h3>
								<p class="text-xs text-neutral-400">
									Neural Network.
								</p>
							</div>
						</div>
					</div>
				</BentoItem>
			</a>

			<a href="/shitfuck1" class="contents">
				<BentoItem
					className="md:col-span-1 md:row-span-1 cursor-pointer hover:scale-[1.01] transition-transform"
				>
					<div
						slot="header"
						class="flex flex-1 w-full h-full min-h-[6rem] rounded-xl bg-orange-900/50 border border-orange-800 p-6 flex flex-col justify-center items-center relative overflow-hidden"
					>
						<div
							class="absolute inset-0 bg-[url('/potat.png')] bg-cover opacity-20 animate-spin-slow"
						>
						</div>
						<h2
							class="text-xl font-black text-orange-200 z-10 relative"
						>
							Incredible
						</h2>
						<p
							class="text-xs text-orange-300 font-mono z-10 relative"
						>
							High Speed
						</p>
					</div>
				</BentoItem>
			</a>

			<a href="/shitfuck2" class="contents">
				<BentoItem
					className="md:col-span-1 md:row-span-1 cursor-pointer hover:scale-[1.01] transition-transform"
				>
					<div
						slot="header"
						class="flex flex-1 w-full h-full min-h-[6rem] rounded-xl bg-purple-900/50 border border-purple-800 p-6 flex flex-col justify-center items-center group relative overflow-hidden"
					>
						<div
							class="absolute inset-0 bg-gradient-to-br from-pink-500/20 to-purple-500/20 group-hover:animate-pulse"
						>
						</div>
						<h2
							class="text-xl font-black text-purple-200 z-10 relative"
						>
							Terms
						</h2>
						<p
							class="text-xs text-purple-300 font-serif italic z-10 relative"
						>
							Read It.
						</p>
					</div>
				</BentoItem>
			</a>

			<a href="/photos" class="contents">
				<BentoItem
					className="md:col-span-4 md:row-span-1 cursor-pointer hover:scale-[1.01] transition-transform"
					title="Photography"
					description="Aviation Gallery."
				>
					<div
						slot="header"
						class="flex flex-1 w-full h-full min-h-[6rem] rounded-xl bg-neutral-900 relative overflow-hidden group"
					>
						<img
							src="/plane/IMG_4224.jpg"
							alt="Airplane"
							class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-100 transition-opacity duration-500"
						/>
						<div
							class="absolute inset-0 bg-gradient-to-t from-neutral-950 via-transparent to-transparent"
						>
						</div>
					</div>
				</BentoItem>
			</a>
		</BentoGrid>
	</main>
</Layout>
